<p id="notice"><%= notice %></p>

<h1><%= @title %></h1>

<%= link_to("All Works", "/works") %><br>
<%= link_to("Submitted Works", "/works/submitted") %><br>
<%= link_to("Draft Works", "/works/draft") %><br>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work['id'] %></td>
        <td><%= work['author_email'] %></td>
        <td><%= work['title'] %></td>
        <td><%= link_to 'Show', "/works/#{work['id']}" %></td>
        <td><%#= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

